@model KwikKwekSnack.Models.OrderViewModel
@{
    ViewData["Title"] = "Create";
}

<style>
    .button-divs {
        padding: 0;
    }
</style>


<div class="flex-fill custom-container">
    <h1>Selecteer een snack</h1>
    <div class="container-fluid bg-light">
        <div class="row">
            <div class="col-sm-10">
                <div class="row offset-1">
                @{
                        int i = 0;

                        foreach(var snack in Model.AllSnacks)
                        {
                            if(i++ % 3 == 0)
                            {
                                @:</div><div class="row offset-1">
                            }
                            @:<div class="col-sm">
                                             
                                if(snack.ImageURL == null || snack.ImageURL == "")
                                {
                                     <a asp-action="AddSnack" asp-route-snackId="@snack.Id">
                                        <img src= "https://www.clker.com/cliparts/q/L/P/Y/t/6/no-image-available-md.png" class="rounded mx-auto d-block mw-25 mh-25" style="width: 180px; height: 180px;" alt="Geen afbeelding beschikbaar"/>
                                     </a>                                   
                                }
                                else
                                {
                                    <a asp-action="AddSnack" asp-route-snackId="@snack.Id">
                                        <img src= "@Url.Content(snack.ImageURL)" class="rounded mx-auto d-block mw-25 mh-25" style="width: 180px; height: 180px;" alt="Geen afbeelding beschikbaar" />
                                    </a>     
                                }           
                                                            
                                @: <div class="flex text-center"><h3> @snack.Name </h3></div>                                
                            @:</div>
                        }                        
                        while(i%3 != 0)
                        {
                            <div class="col-sm">
                            </div>
                            i++;
                        }
                    }</div>                    
                </div>
                <!-- sidebar -->
                <div class="col-2 bg-secondary">
                    <div class="d-flex justify-content-center">
                        <h4>Orders</h4>
                    </div>
                    <div class="d-flex justify-content-end">
                        <ul class="list-group">
                        @{
                            if(Model.SnackOrders != null)
                            {
                                foreach (var snackOrder in Model.SnackOrders)
                                {
                                    double cost = snackOrder.OrderCost;

                                    <li class="list-group-item">
                                    @snackOrder.Snack.Name + 
                                    @{
                                        foreach (var extra in snackOrder.ChosenExtras)
                                        {
                                            @extra.Name                                           
                                        }
                                        @cost
                                    }
                                    </li>
                                }
                            }
                            if(Model.DrinkOrders != null)
                            {
                                foreach (var drinkOrder in Model.DrinkOrders)
                                {
                                    double cost = drinkOrder.OrderCost;

                                    <li class="list-group-item">
                                        @drinkOrder.Drink.Name + 
                                    @{
                                        foreach (var extra in drinkOrder.ChosenExtras)
                                        {
                                            @extra.Name                                           
                                        }
                                        @cost
                                    }
                                    </li>
                                }
                            }
                        }
                            
                        </ul>
                    </div>
                </div>
        </div>
        <div class="row">
            <div class="col-sm-10 button-divs">
                <div class="d-flex justify-content-start">
                    <button type="button" class="btn btn-primary">&laquo; Terug </button>
                </div>
            </div>
            <div class="col-2 bg-secondary button-divs">
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-primary">Volgende &raquo;</button>
                </div>
            </div>
        </div>
    </div>
</div>


